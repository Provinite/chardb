generator client {
  provider = "prisma-client-js"
}

generator json {
  provider = "prisma-json-types-generator"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Visibility {
  PUBLIC
  UNLISTED
  PRIVATE
}

enum MediaType {
  IMAGE
  TEXT
}

enum TextFormatting {
  PLAINTEXT
  MARKDOWN
}

enum TraitValueType {
  STRING
  TIMESTAMP
  INTEGER
  ENUM
}

enum ExternalAccountProvider {
  DEVIANTART
  DISCORD
}



model User {
  id              String    @id @default(uuid())
  username        String    @unique @db.VarChar(30)
  email           String    @unique @db.VarChar(255)
  passwordHash    String    @map("password_hash") @db.VarChar(255)
  displayName     String?   @map("display_name") @db.VarChar(100)
  bio             String?   @db.Text
  avatarImageId   String?   @map("avatar_image_id")
  location        String?   @db.VarChar(100)
  website         String?   @db.VarChar(500)
  dateOfBirth     DateTime? @map("date_of_birth") @db.Date
  isVerified      Boolean   @default(false) @map("is_verified")
  isAdmin         Boolean   @default(false) @map("is_admin")
  privacySettings Json      @default("{}") @map("privacy_settings")
  
  // Identity permission fields (migrated from clovercoin-app Identity model)
  canCreateCommunity        Boolean @default(false) @map("can_create_community")
  canListUsers              Boolean @default(false) @map("can_list_users")
  canListInviteCodes        Boolean @default(false) @map("can_list_invite_codes")
  canCreateInviteCode       Boolean @default(false) @map("can_create_invite_code")
  canGrantGlobalPermissions Boolean @default(false) @map("can_grant_global_permissions")
  
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  // Relations
  avatarImage       Image?      @relation("UserAvatar", fields: [avatarImageId], references: [id], onDelete: SetNull)
  ownedCharacters   Character[] @relation("CharacterOwner")
  createdCharacters Character[] @relation("CharacterCreator")
  uploadedImages    Image[]     @relation("ImageUploader")
  artistImages      Image[]     @relation("ImageArtist")
  media             Media[]
  galleries         Gallery[]
  comments          Comment[]
  profileComments   Comment[]   @relation("UserComments")
  likes             Like[]

  // Social relations
  followers Follow[] @relation("UserFollowing")
  following Follow[] @relation("UserFollower")

  // Community membership relations
  communityMemberships   CommunityMember[]     @relation
  receivedInvitations    CommunityInvitation[] @relation("ReceivedInvitations")
  createdInvitations     CommunityInvitation[] @relation("CreatedInvitations")
  createdInviteCodes     InviteCode[]

  // Character ownership change tracking
  ownershipChangesFrom   CharacterOwnershipChange[] @relation("CharacterOwnershipChangeFrom")
  ownershipChangesTo     CharacterOwnershipChange[] @relation("CharacterOwnershipChangeTo")

  // External account linking
  externalAccounts       ExternalAccount[]

  // Inventory relations
  items                  Item[]           @relation("UserItems")

  // Pending ownership claims
  claimedPendingItems    PendingOwnership[]

  // Password reset tokens
  passwordResetTokens    PasswordResetToken[]

  @@map("users")
}

model ExternalAccount {
  id                 String                  @id @default(uuid())
  userId             String                  @map("user_id")
  provider           ExternalAccountProvider
  providerAccountId  String                  @map("provider_account_id") @db.VarChar(255)
  displayName        String                  @map("display_name") @db.VarChar(100)
  createdAt          DateTime                @default(now()) @map("created_at")
  updatedAt          DateTime                @updatedAt @map("updated_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Constraints: one provider account can only be linked to one user, and one user can only link one account per provider
  @@unique([provider, providerAccountId])
  @@unique([provider, userId])
  @@map("external_accounts")
}

model PasswordResetToken {
  id         String   @id @default(uuid())
  userId     String   @map("user_id")
  tokenHash  String   @unique @map("token_hash") @db.VarChar(64)
  expiresAt  DateTime @map("expires_at")
  used       Boolean  @default(false)
  createdAt  DateTime @default(now()) @map("created_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([tokenHash])
  @@index([userId])
  @@map("password_reset_tokens")
}

model Character {
  id                String     @id @default(uuid())
  name              String     @db.VarChar(100)
  speciesId         String?    @map("species_id")
  speciesVariantId  String?    @map("species_variant_id")
  details           String?    @db.Text
  ownerId           String?    @map("owner_id")
  creatorId         String?    @map("creator_id")
  mainMediaId       String?    @map("main_media_id")
  visibility        Visibility @default(PUBLIC)
  isSellable        Boolean    @default(false) @map("is_sellable")
  isTradeable       Boolean    @default(false) @map("is_tradeable")
  price             Decimal?   @db.Decimal(10, 2)
  customFields      Json       @default("{}") @map("custom_fields")
  /// [CharacterTraitValuesJson]
  traitValues       Json       @default("[]") @map("trait_values")
  createdAt         DateTime   @default(now()) @map("created_at")
  updatedAt         DateTime   @updatedAt @map("updated_at")

  // Relations
  owner          User?           @relation("CharacterOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  creator        User?           @relation("CharacterCreator", fields: [creatorId], references: [id], onDelete: SetNull)
  mainMedia      Media?          @relation("CharacterMainMedia", fields: [mainMediaId], references: [id], onDelete: SetNull)
  species        Species?        @relation(fields: [speciesId], references: [id], onDelete: SetNull)
  speciesVariant SpeciesVariant? @relation(fields: [speciesVariantId], references: [id], onDelete: SetNull)

  media     Media[]
  galleries Gallery[]
  comments  Comment[]
  likes     Like[]
  tags_rel  CharacterTag[]

  // Ownership change tracking
  ownershipChanges CharacterOwnershipChange[]

  // Pending ownership
  pendingOwnership PendingOwnership?

  @@index([traitValues], type: Gin, map: "character_traitvalues_gin_idx")
  @@map("characters")
}

model Image {
  id               String     @id @default(uuid())
  filename         String     @db.VarChar(255)
  originalFilename String     @map("original_filename") @db.VarChar(255)
  originalUrl      String     @map("original_url") @db.Text
  mediumUrl        String?    @map("medium_url") @db.Text
  thumbnailUrl     String?    @map("thumbnail_url") @db.Text
  altText          String?    @map("alt_text") @db.VarChar(200)
  uploaderId       String     @map("uploader_id")
  
  // Artist attribution
  artistId         String?    @map("artist_id")
  artistName       String?    @map("artist_name") @db.VarChar(255)
  artistUrl        String?    @map("artist_url") @db.VarChar(500)
  source           String?    @db.VarChar(500)
  
  width            Int
  height           Int
  fileSize         Int        @map("file_size")
  mimeType         String     @map("mime_type") @db.VarChar(50)
  isNsfw           Boolean    @default(false) @map("is_nsfw")
  sensitiveContentDescription String? @map("sensitive_content_description") @db.Text
  createdAt        DateTime   @default(now()) @map("created_at")
  updatedAt        DateTime   @updatedAt @map("updated_at")

  // Relations
  uploader  User       @relation("ImageUploader", fields: [uploaderId], references: [id], onDelete: Cascade)
  artist    User?      @relation("ImageArtist", fields: [artistId], references: [id], onDelete: SetNull)

  comments Comment[]
  likes    Like[]
  tags_rel ImageTag[]
  media    Media[]
  userAvatars User[]     @relation("UserAvatar")
  itemTypes   ItemType[] @relation("ItemTypeImage")

  @@map("images")
}

model Gallery {
  id          String     @id @default(uuid())
  name        String     @db.VarChar(100)
  description String?    @db.Text
  ownerId     String     @map("owner_id")
  characterId String?    @map("character_id")
  visibility  Visibility @default(PUBLIC)
  sortOrder   Int        @default(0) @map("sort_order")
  createdAt   DateTime   @default(now()) @map("created_at")
  updatedAt   DateTime   @updatedAt @map("updated_at")

  // Relations
  owner     User       @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  character Character? @relation(fields: [characterId], references: [id], onDelete: SetNull)

  media    Media[]
  comments Comment[]
  likes    Like[]

  @@map("galleries")
}

model Comment {
  id        String   @id @default(uuid())
  content   String   @db.Text
  authorId  String   @map("author_id")
  parentId  String?  @map("parent_id")
  isHidden  Boolean  @default(false) @map("is_hidden")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Separate fields for each commentable type - only one will be non-null
  characterId String? @map("character_id")
  imageId     String? @map("image_id")
  mediaId     String? @map("media_id")
  galleryId   String? @map("gallery_id")
  userId      String? @map("user_id") // for user profile comments

  // Relations
  author User @relation(fields: [authorId], references: [id], onDelete: Cascade)

  // Self-referential relation for nested comments
  parent   Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies  Comment[] @relation("CommentReplies")
  
  // Relations with proper foreign key constraints
  character      Character? @relation(fields: [characterId], references: [id], onDelete: Cascade)
  image          Image?     @relation(fields: [imageId], references: [id], onDelete: Cascade)
  media          Media?     @relation(fields: [mediaId], references: [id], onDelete: Cascade)
  gallery        Gallery?   @relation(fields: [galleryId], references: [id], onDelete: Cascade)
  commentedUser  User?      @relation("UserComments", fields: [userId], references: [id], onDelete: Cascade)

  likes Like[]

  @@map("comments")
}

model Follow {
  id          String   @id @default(uuid())
  followerId  String   @map("follower_id")
  followingId String   @map("following_id")
  createdAt   DateTime @default(now()) @map("created_at")

  // Relations
  follower  User @relation("UserFollower", fields: [followerId], references: [id], onDelete: Cascade)
  following User @relation("UserFollowing", fields: [followingId], references: [id], onDelete: Cascade)

  @@unique([followerId, followingId])
  @@map("follows")
}

model Like {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  createdAt   DateTime @default(now()) @map("created_at")

  // Separate fields for each likeable type - only one will be non-null
  characterId String? @map("character_id")
  imageId     String? @map("image_id")
  mediaId     String? @map("media_id")
  galleryId   String? @map("gallery_id")
  commentId   String? @map("comment_id")

  // Relations with proper foreign key constraints
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  character Character? @relation(fields: [characterId], references: [id], onDelete: Cascade)
  image     Image?     @relation(fields: [imageId], references: [id], onDelete: Cascade)
  media     Media?     @relation(fields: [mediaId], references: [id], onDelete: Cascade)
  gallery   Gallery?   @relation(fields: [galleryId], references: [id], onDelete: Cascade)
  comment   Comment?   @relation(fields: [commentId], references: [id], onDelete: Cascade)

  @@unique([userId, characterId])
  @@unique([userId, imageId])
  @@unique([userId, mediaId])
  @@unique([userId, galleryId])
  @@unique([userId, commentId])
  @@map("likes")
}

model Tag {
  id          String  @id @default(uuid())
  name        String  @unique @db.VarChar(50)
  displayName String  @map("display_name") @db.VarChar(50)
  category    String? @db.VarChar(30)
  color       String? @db.VarChar(7)
  createdAt   DateTime @default(now()) @map("created_at")

  // Relations
  characters CharacterTag[]
  images     ImageTag[]
  media      MediaTag[]

  @@map("tags")
}

model CharacterTag {
  characterId String @map("character_id")
  tagId       String @map("tag_id")

  // Relations
  character Character @relation(fields: [characterId], references: [id], onDelete: Cascade)
  tag       Tag       @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([characterId, tagId])
  @@map("character_tags")
}

model ImageTag {
  imageId String @map("image_id")
  tagId   String @map("tag_id")

  // Relations
  image Image @relation(fields: [imageId], references: [id], onDelete: Cascade)
  tag   Tag   @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([imageId, tagId])
  @@map("image_tags")
}

model Media {
  id          String     @id @default(uuid())
  title       String     @db.VarChar(255)
  description String?    @db.Text
  ownerId     String     @map("owner_id")
  characterId String?    @map("character_id")
  galleryId   String?    @map("gallery_id")
  visibility  Visibility @default(PUBLIC)
  
  // Content references (exactly one must be non-null)
  imageId       String?  @map("image_id")
  textContentId String?  @map("text_content_id")
  
  createdAt   DateTime   @default(now()) @map("created_at")
  updatedAt   DateTime   @updatedAt @map("updated_at")

  // Relations
  owner       User         @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  character   Character?   @relation(fields: [characterId], references: [id], onDelete: SetNull)
  gallery     Gallery?     @relation(fields: [galleryId], references: [id], onDelete: SetNull)
  
  // Content relations
  image       Image?       @relation(fields: [imageId], references: [id], onDelete: Cascade)
  textContent TextContent? @relation(fields: [textContentId], references: [id], onDelete: Cascade)

  mainMediaFor Character[] @relation("CharacterMainMedia")
  comments     Comment[]
  likes        Like[]
  tags_rel     MediaTag[]

  @@map("media")
}

model TextContent {
  id         String         @id @default(uuid())
  content    String         @db.Text
  wordCount  Int            @map("word_count")
  formatting TextFormatting @default(PLAINTEXT)

  // Relations
  media      Media[]

  @@map("text_content")
}

model MediaTag {
  mediaId String @map("media_id")
  tagId   String @map("tag_id")

  // Relations
  media Media @relation(fields: [mediaId], references: [id], onDelete: Cascade)
  tag   Tag   @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([mediaId, tagId])
  @@map("media_tags")
}

model Community {
  id               String   @id @default(uuid())
  name             String   @unique @db.VarChar(100)
  discordGuildId   String?  @map("discord_guild_id") @db.VarChar(30)
  discordGuildName String?  @map("discord_guild_name") @db.VarChar(100)
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  // Relations
  species              Species[]
  roles                Role[]
  communityInvitations CommunityInvitation[]
  itemTypes            ItemType[]
  communityColors      CommunityColor[]

  @@map("communities")
}

model CommunityColor {
  id          String   @id @default(uuid())
  name        String   @db.VarChar(50)
  hexCode     String   @map("hex_code") @db.VarChar(7)
  communityId String   @map("community_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  community       Community        @relation(fields: [communityId], references: [id], onDelete: Cascade)
  traits          Trait[]
  enumValues      EnumValue[]
  speciesVariants SpeciesVariant[]
  itemTypes       ItemType[]

  @@unique([communityId, name])
  @@map("community_colors")
}

model Role {
  id          String   @id @default(uuid())
  name        String   @db.VarChar(100)
  communityId String   @map("community_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Community-scoped permissions
  canCreateSpecies         Boolean @default(false) @map("can_create_species")
  canCreateCharacter       Boolean @default(false) @map("can_create_character")
  canCreateOrphanedCharacter Boolean @default(false) @map("can_create_orphaned_character")
  canEditCharacter         Boolean @default(false) @map("can_edit_character")
  canEditOwnCharacter      Boolean @default(false) @map("can_edit_own_character")
  canEditSpecies           Boolean @default(false) @map("can_edit_species")
  canCreateInviteCode      Boolean @default(false) @map("can_create_invite_code")
  canListInviteCodes       Boolean @default(false) @map("can_list_invite_codes")
  canCreateRole            Boolean @default(false) @map("can_create_role")
  canEditRole              Boolean @default(false) @map("can_edit_role")
  canRemoveCommunityMember Boolean @default(false) @map("can_remove_community_member")
  canManageMemberRoles     Boolean @default(false) @map("can_manage_member_roles")
  canManageItems           Boolean @default(false) @map("can_manage_items")
  canGrantItems            Boolean @default(false) @map("can_grant_items")
  canUploadOwnCharacterImages Boolean @default(false) @map("can_upload_own_character_images")
  canUploadCharacterImages    Boolean @default(false) @map("can_upload_character_images")

  // Relations
  community            Community             @relation(fields: [communityId], references: [id], onDelete: Cascade)
  communityMembers     CommunityMember[]
  communityInvitations CommunityInvitation[]
  inviteCodes          InviteCode[]

  @@unique([communityId, name])
  @@map("roles")
}

model CommunityMember {
  id        String   @id @default(uuid())
  roleId    String   @map("role_id")
  userId    String   @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  role Role @relation(fields: [roleId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([roleId, userId])
  @@map("community_members")
}

model CommunityInvitation {
  id          String    @id @default(uuid())
  roleId      String    @map("role_id")
  inviteeId   String    @map("invitee_id")
  inviterId   String    @map("inviter_id")
  communityId String    @map("community_id")
  acceptedAt  DateTime? @map("accepted_at") @db.Timestamptz
  declinedAt  DateTime? @map("declined_at") @db.Timestamptz
  createdAt   DateTime  @default(now()) @map("created_at")

  // Relations
  role      Role      @relation(fields: [roleId], references: [id], onDelete: Cascade)
  invitee   User      @relation("ReceivedInvitations", fields: [inviteeId], references: [id], onDelete: Cascade)
  inviter   User      @relation("CreatedInvitations", fields: [inviterId], references: [id], onDelete: Cascade)
  community Community @relation(fields: [communityId], references: [id], onDelete: Cascade)

  @@map("community_invitations")
}

model InviteCode {
  id         String   @id @db.VarChar(50)
  claimCount Int      @default(0) @map("claim_count")
  maxClaims  Int      @map("max_claims")
  creatorId  String   @map("creator_id")
  roleId     String?  @map("role_id")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  // Relations
  creator User  @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  role    Role? @relation(fields: [roleId], references: [id], onDelete: SetNull)

  @@map("invite_codes")
}

model CharacterOwnershipChange {
  id            String   @id @default(uuid())
  characterId   String   @map("character_id")
  fromUserId    String?  @map("from_user_id")
  toUserId      String   @map("to_user_id")
  createdAt     DateTime @default(now()) @map("created_at")

  // Relations
  character Character @relation(fields: [characterId], references: [id], onDelete: Cascade)
  fromUser  User?     @relation("CharacterOwnershipChangeFrom", fields: [fromUserId], references: [id], onDelete: SetNull)
  toUser    User      @relation("CharacterOwnershipChangeTo", fields: [toUserId], references: [id], onDelete: Cascade)

  @@map("character_ownership_changes")
}

model PendingOwnership {
  id                 String   @id @default(uuid())

  // Exactly one must be set (enforced by CHECK constraint)
  characterId        String?  @unique @map("character_id")
  itemId             String?  @unique @map("item_id")

  // External account info
  provider           ExternalAccountProvider
  providerAccountId  String   @map("provider_account_id") @db.VarChar(255)
  displayIdentifier  String?  @map("display_identifier") @db.VarChar(255)

  // Claiming info
  createdAt          DateTime @default(now()) @map("created_at")
  claimedAt          DateTime? @map("claimed_at")
  claimedByUserId    String?  @map("claimed_by_user_id")

  // Relations
  character     Character? @relation(fields: [characterId], references: [id], onDelete: Cascade)
  item          Item?      @relation(fields: [itemId], references: [id], onDelete: Cascade)
  claimedByUser User?      @relation(fields: [claimedByUserId], references: [id], onDelete: SetNull)

  // Constraints
  @@index([provider, providerAccountId])
  @@map("pending_ownership")
}

model ItemType {
  id          String  @id @default(uuid())
  name        String  @db.VarChar(100)
  description String? @db.Text
  communityId String  @map("community_id")
  category    String? @db.VarChar(50)

  // Item properties
  isStackable    Boolean @default(true) @map("is_stackable")
  maxStackSize   Int?    @map("max_stack_size")
  isTradeable    Boolean @default(true) @map("is_tradeable")
  isConsumable   Boolean @default(false) @map("is_consumable")

  // Visual properties
  imageId        String? @map("image_id")
  colorId        String? @map("color_id")

  // Metadata
  metadata       Json    @default("{}") // Flexible properties

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  community      Community       @relation(fields: [communityId], references: [id], onDelete: Cascade)
  color          CommunityColor? @relation(fields: [colorId], references: [id], onDelete: SetNull)
  image          Image?          @relation("ItemTypeImage", fields: [imageId], references: [id], onDelete: SetNull)
  items          Item[]

  @@unique([name, communityId])
  @@map("item_types")
}

model Item {
  id           String  @id @default(uuid())
  itemTypeId   String  @map("item_type_id")
  ownerId      String? @map("owner_id")
  quantity     Int     @default(1)

  // Item state
  metadata     Json    @default("{}") // Instance-specific data

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  itemType     ItemType @relation(fields: [itemTypeId], references: [id], onDelete: Cascade)
  owner        User?    @relation("UserItems", fields: [ownerId], references: [id], onDelete: Cascade)

  // Pending ownership
  pendingOwnership PendingOwnership?

  @@map("items")
}

model Species {
  id          String    @id @default(uuid())
  name        String    @unique @db.VarChar(100)
  communityId String    @map("community_id")
  hasImage    Boolean   @default(false) @map("has_image")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  // Relations
  community       Community       @relation(fields: [communityId], references: [id], onDelete: Cascade)
  characters      Character[]
  traits          Trait[]
  speciesVariants SpeciesVariant[]

  @@map("species")
}

model Trait {
  id                   String         @id @default(uuid())
  name                 String         @db.VarChar(100)
  valueType            TraitValueType @map("value_type")
  allowsMultipleValues Boolean        @default(false) @map("allows_multiple_values")
  speciesId            String         @map("species_id")
  colorId              String?        @map("color_id")
  createdAt            DateTime       @default(now()) @map("created_at")
  updatedAt            DateTime       @updatedAt @map("updated_at")

  // Relations
  species          Species          @relation(fields: [speciesId], references: [id], onDelete: Cascade)
  color            CommunityColor?  @relation(fields: [colorId], references: [id], onDelete: SetNull)
  enumValues       EnumValue[]
  traitListEntries TraitListEntry[]

  @@unique([speciesId, name])
  @@map("traits")
}

model EnumValue {
  id        String   @id @default(uuid())
  name      String   @db.VarChar(100)
  order     Int      @default(0)
  traitId   String   @map("trait_id")
  colorId   String?  @map("color_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  trait             Trait              @relation(fields: [traitId], references: [id], onDelete: Cascade)
  color             CommunityColor?    @relation(fields: [colorId], references: [id], onDelete: SetNull)
  enumValueSettings EnumValueSetting[]

  @@unique([traitId, name])
  @@unique([traitId, order])
  @@map("enum_values")
}

model SpeciesVariant {
  id        String   @id @default(uuid())
  name      String   @db.VarChar(100)
  speciesId String   @map("species_id")
  colorId   String?  @map("color_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  species           Species            @relation(fields: [speciesId], references: [id], onDelete: Cascade)
  color             CommunityColor?    @relation(fields: [colorId], references: [id], onDelete: SetNull)
  characters        Character[]
  traitListEntries  TraitListEntry[]
  enumValueSettings EnumValueSetting[]

  @@unique([speciesId, name])
  @@map("species_variants")
}

model TraitListEntry {
  id                     String         @id @default(uuid())
  traitId                String         @map("trait_id")
  speciesVariantId       String         @map("species_variant_id")
  order                  Int
  required               Boolean
  valueType              TraitValueType @map("value_type")
  defaultValueString     String?        @map("default_value_string") @db.VarChar(255)
  defaultValueInt        Int?           @map("default_value_int")
  defaultValueTimestamp  DateTime?      @map("default_value_timestamp") @db.Timestamptz
  createdAt              DateTime       @default(now()) @map("created_at")
  updatedAt              DateTime       @updatedAt @map("updated_at")

  // Relations
  trait          Trait          @relation(fields: [traitId], references: [id], onDelete: Cascade)
  speciesVariant SpeciesVariant @relation(fields: [speciesVariantId], references: [id], onDelete: Cascade)

  @@unique([traitId, speciesVariantId])
  @@map("trait_list_entries")
}

model EnumValueSetting {
  id               String   @id @default(uuid())
  enumValueId      String   @map("enum_value_id")
  speciesVariantId String   @map("species_variant_id")
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  // Relations
  enumValue      EnumValue      @relation(fields: [enumValueId], references: [id], onDelete: Cascade)
  speciesVariant SpeciesVariant @relation(fields: [speciesVariantId], references: [id], onDelete: Cascade)

  @@unique([enumValueId, speciesVariantId])
  @@map("enum_value_settings")
}