{
  "name": "chardb",
  "version": "4.0.0",
  "private": true,
  "packageManager": "yarn@4.10.2+sha512.0b0e54ad5381f0a35184957bd3ea44e37f5a4fb1960b903b0fb9a3c7c2c009190455c41ef2a1977b1dbd3b72c5f152da696e9c52e2bc78a011b6adea8ee73ba3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -A run build",
    "dev": "concurrently \"yarn workspace @chardb/backend dev\" \"yarn workspace @chardb/frontend dev\" --names \"backend,frontend\" --prefix-colors \"cyan,magenta\"",
    "dev:backend": "yarn workspace @chardb/backend dev",
    "dev:frontend": "yarn workspace @chardb/frontend dev",
    "dev:agent": "yarn dev | tee dev.log",
    "test": "yarn workspaces foreach -A run test",
    "lint": "yarn workspaces foreach -A run lint",
    "type-check": "yarn workspaces foreach -A run type-check",
    "clean": "yarn workspaces foreach -A run clean",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.3",
    "concurrently": "^9.1.2",
    "eslint": "^8.0.0",
    "husky": "^9.1.7",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "1.0.17"
  }
}
