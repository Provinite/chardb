{
  "name": "thclone",
  "version": "1.0.0",
  "private": true,
  "packageManager": "yarn@4.1.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -A run build",
    "dev": "concurrently \"yarn workspace @thclone/backend dev\" \"yarn workspace @thclone/frontend dev\" --names \"backend,frontend\" --prefix-colors \"cyan,magenta\"",
    "dev:backend": "yarn workspace @thclone/backend dev",
    "dev:frontend": "yarn workspace @thclone/frontend dev",
    "test": "yarn workspaces foreach -A run test",
    "lint": "yarn workspaces foreach -A run lint",
    "type-check": "yarn workspaces foreach -A run type-check",
    "clean": "yarn workspaces foreach -A run clean"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^9.1.2",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "1.0.17"
  }
}
