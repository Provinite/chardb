{
  "name": "@chardb/frontend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "predev": "yarn schema:export && yarn codegen",
    "build": "yarn build:safe",
    "build:safe": "(yarn schema:export && yarn codegen || echo 'Warning: GraphQL codegen failed, using existing generated files') && tsc && vite build",
    "schema:export": "yarn workspace @chardb/backend schema:export",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "codegen": "graphql-codegen --config codegen.yml",
    "codegen:with-schema": "yarn schema:export && yarn codegen",
    "codegen:watch": "graphql-codegen --config codegen.yml --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@apollo/client": "^3.8.0",
    "@chardb/shared": "workspace:*",
    "@chardb/ui": "workspace:*",
    "@hookform/resolvers": "^3.3.0",
    "@mantine/core": "^8.0.2",
    "@mantine/hooks": "^8.0.2",
    "framer-motion": "^10.16.0",
    "graphql": "^16.8.0",
    "lucide-react": "^0.513.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.0",
    "react-hook-form": "^7.45.0",
    "react-hot-toast": "^2.4.0",
    "react-query": "^3.39.0",
    "react-router-dom": "^6.15.0",
    "styled-components": "^6.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.7",
    "@graphql-codegen/introspection": "^4.0.3",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-operations": "^4.6.1",
    "@graphql-codegen/typescript-react-apollo": "^4.3.3",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/styled-components": "^5.1.34",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "@vitest/ui": "^3.2.2",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "jsdom": "^26.1.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vitest": "^3.2.2"
  }
}
